    <script>
        // JavaScript 监听 section1 的点击事件 / JavaScript to listen for click event on section1
        document.getElementById("section1").addEventListener("click", function() {
            // 发送 AJAX 请求到 PHP 脚本 / Send AJAX request to PHP script
            fetch("handle_section_click.php", {
                method: "POST", // 使用 POST 方法 / Use POST method
                headers: {
                    "Content-Type": "application/json" // 设置请求头为 JSON 格式 / Set request header to JSON format
                },
                body: JSON.stringify({ section: "section1" }) // 发送 JSON 格式的数据 / Send JSON formatted data
            })
            .then(response => response.json()) // 解析返回的 JSON 数据 / Parse the returned JSON data
            .then(data => {
                if (data.status === "success") {
                    // 显示查询结果 / Display query results
                    console.log("Data:", data.data);
                    alert("Data fetched successfully! Check console for details.");
                } else {
                    // 显示错误信息 / Display error message
                    alert("Error: " + data.message);
                }
            })
            .catch(error => {
                console.error("Error:", error);
            });
        });
    </script>
