<?php
// 包含数据库连接文件
// Contains the database connection file
require_once 'db_config.php';

try {
    // 连接到数据库
    // Connect to the database
    $pdo = new PDO($dbConfig['dsn'], $dbConfig['username'], $dbConfig['password']);
    
    // 插入新的报纸和参考资料
    // Insert new newspaper and reference materials
    if ($_SERVER['REQUEST_METHOD'] == 'POST') {
        $article_id = $_POST['article_id'];
        $source_name = $_POST['source_name'];
        
        $stmt = $pdo->prepare('INSERT INTO newspaper_references (article_id, source_name) VALUES (:aid, :sname)');
        $stmt->bindParam(':aid', $article_id);
        $stmt->bindParam(':sname', $source_name);
        $stmt->execute();
    }
    
    // 获取所有报纸和参考资料
    // Get all newspapers and reference materials
    $stmt = $pdo->query('SELECT * FROM newspaper_references');
